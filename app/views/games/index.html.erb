<h1>Games</h1>
  <% if current_user %>
    <div>
      <%= link_to "Create game", new_game_path, class: "btn btn-primary" %>
    </div>
  <% end %>
<hr />

<% if @games.present? %>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <th>Name</th>
      <th>Company</th>
      <th>Fingerprint</th>
      <% if current_user %>
        <th>Edit</th>
        <th>Destroy</th>
      <% end %>
    </thead>
    <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.company %></td>
        <td><%= game.fingerprint %></td>
        <% if current_user %>
          <td><%= link_to "Edit game", edit_game_path(game), class: "btn btn-primary" %></td>
          <td><%= link_to "Destroy game", game_path(game), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

<% else %>
  No games found.
<% end %>
